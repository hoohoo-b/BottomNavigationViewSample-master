<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bottomnav.thesevchefs.com.cooktasty">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cooktasty_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="bottomnav.thesevchefs.com.cooktasty.MainActivity"></activity>
        <activity
            android:name="bottomnav.thesevchefs.com.cooktasty.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="bottomnav.thesevchefs.com.cooktasty.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bottomnav.thesevchefs.com.cooktasty.RecipeDetailsActivity"
            android:parentActivityName="bottomnav.thesevchefs.com.cooktasty.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bottomnav.thesevchefs.com.cooktasty.MainActivity" />
        </activity>
        <activity
            android:name="bottomnav.thesevchefs.com.cooktasty.UploadActivity"
            android:label="Upload"
            android:parentActivityName="bottomnav.thesevchefs.com.cooktasty.MainActivity"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>

</manifest>